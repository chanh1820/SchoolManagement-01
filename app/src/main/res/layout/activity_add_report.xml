<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.quanlytrucnhat.AddReportActivity">
    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Học Sinh:"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold"/>
        <Spinner
            android:background="@drawable/style_spinner"
            android:id="@+id/spn_choose_student"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:dropDownVerticalOffset="40dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại vi phạm:"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold"/>
        <Spinner

            android:background="@drawable/style_spinner"
            android:id="@+id/spn_choose_rule_parent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:dropDownVerticalOffset="40dp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vi phạm:"
            android:textSize="@dimen/text_size_default"
            android:textStyle="bold"/>
        <Spinner
            android:background="@drawable/style_spinner"
            android:id="@+id/spn_choose_rule_child"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:dropDownVerticalOffset="40dp" />
    </LinearLayout>

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_camera_alt_24"
        android:id="@+id/imv_init_image"
        android:layout_width="180dp"
        android:layout_height="180dp"/>
    <Button
        android:text="lưu"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:backgroundTint="@color/button"
        android:id="@+id/btn_save_report"
        android:layout_width="161dp"
        android:layout_height="100dp"/>
</LinearLayout>