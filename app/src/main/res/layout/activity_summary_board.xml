<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.bangtongket.SummaryBoardActivity">
    <LinearLayout
        android:layout_marginVertical="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="5"
            android:id="@+id/tv_summary_staff_name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyen vĂn A"/>
        <TextView
            android:layout_weight="4"
            android:textStyle="bold"
            android:id="@+id/tv_summary_week"
            android:textColor="#F60000"
            android:textSize="@dimen/text_size_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuần 1"/>
        <Button
            android:id="@+id/btnSaveScreenShot"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button"
            android:text="Lưu"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#004f91">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:text="Lớp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:text="Điểm xếp loại\ntiết học"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:text="Điểm thi đua"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:text="Tổng điểm"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:text="Hạng"
        android:textColor="#ffffff" />
    </LinearLayout>
    <ListView
        android:id="@+id/lvSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null" />
</LinearLayout>